{
  "name": "forge-inventory-subgraph",
  "version": "1.0.0",
  "description": "The Forge Inventory Subgraph for indexing on-chain inventory events",
  "scripts": {
    "build": "graph build",
    "codegen": "graph codegen",
    "prepare": "npm run codegen && npm run build",
    "test": "graph test",
    "dev": "node dev-server.js",
    "start": "node dev-server.js",
    "setup-local": "./scripts/setup-local.sh",
    "create-local": "graph create --node http://localhost:8020/ forge-inventory",
    "deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 forge-inventory",
    "remove-local": "graph remove --node http://localhost:8020/ forge-inventory",
    "deploy-production": "./scripts/deploy-production.sh",
    "deploy-digitalocean": "./scripts/deploy-digitalocean.sh",
    "logs-local": "docker-compose logs -f graph-node",
    "stop-local": "docker-compose down",
    "clean-local": "docker-compose down -v && rm -rf data/"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "^0.56.0",
    "@graphprotocol/graph-ts": "^0.38.1",
    "ethers": "^6.15.0",
    "express": "^5.1.0",
    "graphql": "^15.10.1",
    "graphql-http": "^1.22.4"
  },
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC"
}
